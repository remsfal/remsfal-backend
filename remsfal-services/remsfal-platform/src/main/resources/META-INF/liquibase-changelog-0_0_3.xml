<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="remsfal-backend-0.0.3-project" author="alexander.stanik@htw-berlin.de">
        <createTable tableName="PROJECT">
            <column name="ID" type="varchar(36)">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="TITLE" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="CREATED_AT" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
            <column name="MODIFIED_AT" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createTable tableName="PROJECT_MEMBERSHIP">
            <column name="PROJECT_ID" type="varchar(36)">
                <constraints nullable="false" />
            </column>
            <column name="USER_ID" type="varchar(36)">
                <constraints nullable="false" />
            </column>
            <column name="MEMBER_ROLE" type="varchar(20)">
                <constraints nullable="false" checkConstraint="MEMBER_ROLE IN ('PROPRIETOR', 'MANAGER', 'LESSOR', 'STAFF', 'COLLABORATOR')" />
            </column>
            <column name="CREATED_AT" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
            <column name="MODIFIED_AT" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey tableName="PROJECT_MEMBERSHIP" constraintName="PK_PROJECT_MEMBERSHIP"
                columnNames="PROJECT_ID,USER_ID"/>

        <addForeignKeyConstraint constraintName="FK_MEMBERSHIP_PROJECT_ID"
            baseTableName="PROJECT_MEMBERSHIP" baseColumnNames="PROJECT_ID"
            referencedTableName="PROJECT" referencedColumnNames="ID"
            onDelete="CASCADE" onUpdate="RESTRICT" />

        <addForeignKeyConstraint constraintName="FK_MEMBERSHIP_USER_ID"
            baseTableName="PROJECT_MEMBERSHIP" baseColumnNames="USER_ID"
            referencedTableName="USER" referencedColumnNames="ID"
            onDelete="CASCADE" onUpdate="RESTRICT" />
    </changeSet>

    <changeSet id="remsfal-backend-0.0.3-task" author="alexander.stanik@htw-berlin.de">
        <createTable tableName="TASK">
            <column name="ID" type="varchar(36)">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="TYPE" type="varchar(20)">
                <constraints nullable="false" checkConstraint="TYPE IN ('TASK', 'DEFECT', 'MAINTENANCE')" />
            </column>
            <column name="PROJECT_ID" type="varchar(36)">
                <constraints nullable="false" />
            </column>
            <column name="TITLE" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="STATUS" type="varchar(20)" defaultValue="PENDING">
                <constraints nullable="false" checkConstraint="STATUS IN ('PENDING', 'OPEN', 'IN_PROGRESS', 'CLOSED', 'REJECTED')" />
            </column>
            <column name="REPORTER_ID" type="varchar(36)" />
            <column name="OWNER_ID" type="varchar(36)" />
            <column name="DESCRIPTION" type="clob" />
            <column name="BLOCKED_BY" type="varchar(36)" />
            <column name="RELATED_TO" type="varchar(36)" />
            <column name="DUPLICATE_OF" type="varchar(36)" />
            <column name="CREATED_BY" type="varchar(36)">
                <constraints nullable="false" />
            </column>
            <column name="CREATED_AT" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
            <column name="MODIFIED_AT" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="FK_TASK_PROJECT_ID"
            baseTableName="TASK" baseColumnNames="PROJECT_ID"
            referencedTableName="PROJECT" referencedColumnNames="ID"
            onDelete="CASCADE" onUpdate="RESTRICT" />

        <createIndex indexName="IDX_TASK_PROJECT_FK" tableName="TASK">
            <column name="TYPE" />
            <column name="PROJECT_ID" />
        </createIndex>
    </changeSet>

</databaseChangeLog>
