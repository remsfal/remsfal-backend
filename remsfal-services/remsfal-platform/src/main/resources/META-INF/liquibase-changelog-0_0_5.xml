<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="remsfal-backend-0.0.5-site" author="alexander.stanik@htw-berlin.de">
        <createTable tableName="sites">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="project_id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="property_id" type="uuid">
                <constraints nullable="false" />
             </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="location" type="varchar(255)" />
            <column name="description" type="clob" />
            <column name="address_id" type="uuid" />
            <column name="outdoor_area" type="decimal(10, 2)" />
            <column name="created_at" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
            <column name="modified_at" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_site_project_id"
            baseTableName="sites" baseColumnNames="project_id"
            referencedTableName="projects" referencedColumnNames="id"
            onDelete="CASCADE" onUpdate="RESTRICT" />

        <addForeignKeyConstraint constraintName="fk_site_property_id"
            baseTableName="sites" baseColumnNames="property_id"
            referencedTableName="properties" referencedColumnNames="id"
            onDelete="CASCADE" onUpdate="RESTRICT" />

        <createIndex indexName="idx_site_project_fk" tableName="sites">
            <column name="project_id" type="uuid" />
        </createIndex>

        <createIndex indexName="idx_site_property_fk" tableName="sites">
            <column name="property_id" type="uuid" />
        </createIndex>

        <createTable tableName="site_rents">
            <column name="tenancy_id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="site_id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="first_payment" type="date" />
            <column name="last_payment" type="date" />
            <column name="billing_cycle" type="varchar(20)" defaultValue="MONTHLY">
                <constraints nullable="false" checkConstraint="BILLING_CYCLE IN ('WEEKLY', 'MONTHLY', 'YEARLY')" />
            </column>
            <column name="basic_rent" type="decimal(10, 2)" />
            <column name="operating_costs_prepayment" type="decimal(10, 2)" />
            <column name="heating_costs_prepayment" type="decimal(10, 2)" />
            <column name="created_at" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
            <column name="modified_at" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_site_rent_tenancy_id"
            baseTableName="site_rents" baseColumnNames="tenancy_id"
            referencedTableName="tenancies" referencedColumnNames="id"
            onDelete="CASCADE" onUpdate="RESTRICT" />

        <addForeignKeyConstraint constraintName="fk_site_rent_site_id"
            baseTableName="site_rents" baseColumnNames="site_id"
            referencedTableName="sites" referencedColumnNames="id"
            onDelete="CASCADE" onUpdate="RESTRICT" />

        <createIndex indexName="idx_site_rent_tenancy_fk" tableName="site_rents">
            <column name="tenancy_id" type="uuid" />
        </createIndex>
    </changeSet>

</databaseChangeLog>
