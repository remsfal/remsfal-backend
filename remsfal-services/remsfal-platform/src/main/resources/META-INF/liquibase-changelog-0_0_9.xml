<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="remsfal-backend-0.1.0-commercial" author="alexander.stanik@htw-berlin.de">
        <comment>Create commercial space schema with commercials and commercial rental tables</comment>

        <createTable tableName="commercials">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="project_id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="building_id" type="uuid">
                <constraints nullable="false" />
             </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="location" type="varchar(255)" />
            <column name="description" type="clob" />
            <column name="net_floor_area" type="DECIMAL(10, 2)" />
            <column name="usable_floor_area" type="DECIMAL(10, 2)" />
            <column name="technical_service_area" type="DECIMAL(10, 2)" />
            <column name="traffic_area" type="DECIMAL(10, 2)" />
            <column name="heating_space" type="DECIMAL(10, 2)" />
            <column name="created_at" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
            <column name="modified_at" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_commercial_project_id"
            baseTableName="commercials" baseColumnNames="project_id"
            referencedTableName="projects" referencedColumnNames="id"
            onDelete="CASCADE" onUpdate="RESTRICT" />

        <addForeignKeyConstraint constraintName="fk_commercial_building_id"
            baseTableName="commercials" baseColumnNames="building_id"
            referencedTableName="buildings" referencedColumnNames="id"
            onDelete="CASCADE" onUpdate="RESTRICT" />

        <createIndex indexName="idx_commercial_project_fk" tableName="commercials">
            <column name="project_id" type="uuid" />
        </createIndex>

        <createIndex indexName="idx_commercial_building_fk" tableName="commercials">
            <column name="building_id" type="uuid" />
        </createIndex>

        <createTable tableName="commercial_rents">
            <column name="agreement_id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="commercial_id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="first_payment" type="date">
                <constraints nullable="false" />
            </column>
            <column name="last_payment" type="date" />
            <column name="billing_cycle" type="varchar(20)" defaultValue="MONTHLY">
                <constraints nullable="false" checkConstraint="billing_cycle IN ('WEEKLY', 'MONTHLY', 'YEARLY')" />
            </column>
            <column name="basic_rent" type="decimal(10, 2)" />
            <column name="operating_costs_prepayment" type="decimal(10, 2)" />
            <column name="heating_costs_prepayment" type="decimal(10, 2)" />
            <column name="created_at" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
            <column name="modified_at" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey constraintName="pk_commercial_rents"
            tableName="commercial_rents"
            columnNames="commercial_id,first_payment" />

        <addForeignKeyConstraint constraintName="fk_commercial_rent_agreement_id"
            baseTableName="commercial_rents" baseColumnNames="agreement_id"
            referencedTableName="rental_agreements" referencedColumnNames="id"
            onDelete="CASCADE" onUpdate="RESTRICT" />

        <addForeignKeyConstraint constraintName="fk_commercial_rent_commercial_id"
            baseTableName="commercial_rents" baseColumnNames="commercial_id"
            referencedTableName="commercials" referencedColumnNames="id"
            onDelete="CASCADE" onUpdate="RESTRICT" />

        <createIndex indexName="idx_commercial_rent_agreement_fk" tableName="commercial_rents">
            <column name="agreement_id" type="uuid" />
        </createIndex>
    </changeSet>

</databaseChangeLog>
