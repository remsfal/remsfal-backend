<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="remsfal-backend-0.0.6-building" author="alexander.stanik@htw-berlin.de">
        <comment>Create building schema with buildings and building rental tables</comment>

        <createTable tableName="buildings">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="project_id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="property_id" type="uuid">
                <constraints nullable="false" />
             </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="location" type="varchar(255)" />
            <column name="description" type="clob" />
            <column name="address_id" type="uuid" />
            <column name="gross_floor_area" type="DECIMAL(10, 2)" />
            <column name="net_floor_area" type="DECIMAL(10, 2)" />
            <column name="construction_floor_area" type="DECIMAL(10, 2)" />
            <column name="living_space" type="DECIMAL(10, 2)" />
            <column name="usable_space" type="DECIMAL(10, 2)" />
            <column name="heating_space" type="DECIMAL(10, 2)" />
            <column name="created_at" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
            <column name="modified_at" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_building_project_id"
            baseTableName="buildings" baseColumnNames="project_id"
            referencedTableName="projects" referencedColumnNames="id"
            onDelete="CASCADE" onUpdate="RESTRICT" />

        <addForeignKeyConstraint constraintName="fk_building_property_id"
            baseTableName="buildings" baseColumnNames="property_id"
            referencedTableName="properties" referencedColumnNames="id"
            onDelete="CASCADE" onUpdate="RESTRICT" />

        <createIndex indexName="idx_building_project_fk" tableName="buildings">
            <column name="project_id" type="uuid" />
        </createIndex>

        <createIndex indexName="idx_building_property_fk" tableName="buildings">
            <column name="property_id" type="uuid" />
        </createIndex>

        <createTable tableName="building_rents">
            <column name="agreement_id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="building_id" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="first_payment" type="date">
                <constraints nullable="false" />
            </column>
            <column name="last_payment" type="date" />
            <column name="billing_cycle" type="varchar(20)" defaultValue="MONTHLY">
                <constraints nullable="false" checkConstraint="billing_cycle IN ('WEEKLY', 'MONTHLY', 'YEARLY')" />
            </column>
            <column name="basic_rent" type="decimal(10, 2)" />
            <column name="operating_costs_prepayment" type="decimal(10, 2)" />
            <column name="heating_costs_prepayment" type="decimal(10, 2)" />
            <column name="created_at" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
            <column name="modified_at" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey constraintName="pk_building_rents"
            tableName="building_rents"
            columnNames="building_id,first_payment" />

        <addForeignKeyConstraint constraintName="fk_building_rent_agreement_id"
            baseTableName="building_rents" baseColumnNames="agreement_id"
            referencedTableName="rental_agreements" referencedColumnNames="id"
            onDelete="CASCADE" onUpdate="RESTRICT" />

        <addForeignKeyConstraint constraintName="fk_building_rent_building_id"
            baseTableName="building_rents" baseColumnNames="building_id"
            referencedTableName="buildings" referencedColumnNames="id"
            onDelete="CASCADE" onUpdate="RESTRICT" />

        <createIndex indexName="idx_building_rent_agreement_fk" tableName="building_rents">
            <column name="agreement_id" type="uuid" />
        </createIndex>
    </changeSet>

</databaseChangeLog>
