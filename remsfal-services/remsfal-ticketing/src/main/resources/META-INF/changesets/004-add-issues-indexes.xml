<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                                       http://www.liquibase.org/xml/ns/dbchangelog-ext
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="remsfal-ticketing-0.0.2-issues-indexes" author="github-copilot">
        <comment>Add indexes to issues table for filtering</comment>
        <sql>
            CREATE INDEX IF NOT EXISTS issues_status_idx ON REMSFAL.issues (status);
        </sql>
        <sql>
            CREATE INDEX IF NOT EXISTS issues_assignee_id_idx ON REMSFAL.issues (assignee_id);
        </sql>
        <sql>
            CREATE INDEX IF NOT EXISTS issues_agreement_id_idx ON REMSFAL.issues (agreement_id);
        </sql>
        <rollback>
            <sql>DROP INDEX IF EXISTS REMSFAL.issues_status_idx;</sql>
            <sql>DROP INDEX IF EXISTS REMSFAL.issues_assignee_id_idx;</sql>
            <sql>DROP INDEX IF EXISTS REMSFAL.issues_agreement_id_idx;</sql>
        </rollback>
    </changeSet>

</databaseChangeLog>
