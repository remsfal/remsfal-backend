<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                                       http://www.liquibase.org/xml/ns/dbchangelog-ext
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="remsfal-ticketing-0.0.5-quotations" author="alexander.stanik@htw-berlin.de">
        <comment>Create quotations table</comment>
        <sql>
            CREATE TABLE IF NOT EXISTS REMSFAL.quotations (
                project_id UUID,
                issue_id UUID,
                quotation_id UUID,
                requester_id UUID,
                contractor_id UUID,
                text TEXT,
                status TEXT,
                created_at TIMESTAMP,
                PRIMARY KEY ((project_id, issue_id), quotation_id)
            ) WITH CLUSTERING ORDER BY (quotation_id ASC);
        </sql>
        <sql>
            CREATE INDEX IF NOT EXISTS quotations_quotation_id_idx ON REMSFAL.quotations (quotation_id);
        </sql>
        <rollback>
            <sql>DROP TABLE IF EXISTS REMSFAL.quotations;</sql>
            <sql>DROP INDEX IF EXISTS quotations_quotation_id_idx;</sql>
        </rollback>
    </changeSet>

</databaseChangeLog>
