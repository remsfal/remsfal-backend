    <changeSet id="remsfal-ticketing-0.0.5-issue-priority-fields" author="assistant">
        <comment>Add priority fields to issues table</comment>
        <sql>
            ALTER TABLE REMSFAL.issues ADD priority TEXT;
        </sql>
        <sql>
            ALTER TABLE REMSFAL.issues ADD priority_score DOUBLE;
        </sql>
        <sql>
            ALTER TABLE REMSFAL.issues ADD priority_model TEXT;
        </sql>
        <sql>
            ALTER TABLE REMSFAL.issues ADD priority_timestamp TIMESTAMP;
        </sql>
        <rollback>
            <sql>ALTER TABLE REMSFAL.issues DROP priority;</sql>
            <sql>ALTER TABLE REMSFAL.issues DROP priority_score;</sql>
            <sql>ALTER TABLE REMSFAL.issues DROP priority_model;</sql>
            <sql>ALTER TABLE REMSFAL.issues DROP priority_timestamp;</sql>
        </rollback>
