<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="remsfal-ticketing-0.0.7-add-contractor-id" author="s0595830@htw-berlin.de">
        <comment>Add contractor_id and index to issues table</comment>
        <sql>
            ALTER TABLE REMSFAL.issues ADD contractor_id UUID;
        </sql>
        <sql>
            CREATE INDEX IF NOT EXISTS issues_contractor_id_idx ON REMSFAL.issues (contractor_id);
        </sql>
        <rollback>
            <sql>ALTER TABLE REMSFAL.issues DROP contractor_id;</sql>
            <sql>DROP INDEX IF EXISTS REMSFAL.issues_contractor_id_idx;</sql>
        </rollback>
    </changeSet>

</databaseChangeLog>
