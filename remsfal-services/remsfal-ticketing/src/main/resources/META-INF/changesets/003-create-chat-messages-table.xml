<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                                       http://www.liquibase.org/xml/ns/dbchangelog-ext
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="remsfal-ticketing-0.0.3-chat_messages" author="alexander.stanik@htw-berlin.de">
        <comment>Create chat_messages table</comment>
        <sql>
            CREATE TABLE IF NOT EXISTS REMSFAL.chat_messages (
                session_id UUID,
                message_id UUID,
                sender_id UUID,
                content_type TEXT,
                content TEXT,
                url TEXT,
                created_at TIMESTAMP,
                modified_at TIMESTAMP,
                PRIMARY KEY (session_id, message_id)
            ) WITH CLUSTERING ORDER BY (message_id ASC);
        </sql>
        <rollback>
            <sql>DROP TABLE IF EXISTS REMSFAL.chat_messages;</sql>
        </rollback>
    </changeSet>

</databaseChangeLog>