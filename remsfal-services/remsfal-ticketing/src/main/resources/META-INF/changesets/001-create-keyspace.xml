<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                                       http://www.liquibase.org/xml/ns/dbchangelog-ext
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="remsfal-ticketing-0.0.1-keyspace" author="alexander.stanik@htw-berlin.de">
        <comment>Create REMSFAL keyspace</comment>
        <ext:createKeyspace keyspaceName="REMSFAL">
            <ext:withClause>replication = {'class': 'NetworkTopologyStrategy', 'datacenter1': 2}</ext:withClause>
        </ext:createKeyspace>
        <rollback>
            <sql>DROP KEYSPACE IF EXISTS REMSFAL;</sql>
        </rollback>
    </changeSet>

</databaseChangeLog>