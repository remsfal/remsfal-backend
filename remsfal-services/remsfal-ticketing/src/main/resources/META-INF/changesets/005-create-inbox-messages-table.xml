<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
            http://www.liquibase.org/xml/ns/dbchangelog-ext
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="005-create-inbox-messages-table" author="Hoang.Nguyen@Student.HTW-Berlin.de">
        <comment>Create inbox_messages table</comment>

        <sql>
            CREATE TABLE IF NOT EXISTS REMSFAL.inbox_messages (
            user_id TEXT,
            received_at TIMESTAMP,
            id UUID,
            type TEXT,
            contractor TEXT,
            subject TEXT,
            property TEXT,
            tenant TEXT,
            read BOOLEAN,
            issue_link TEXT,
            PRIMARY KEY ((user_id), id)
            );
        </sql>

        <rollback>
            <sql>
                DROP TABLE IF EXISTS REMSFAL.inbox_messages;
            </sql>
        </rollback>
    </changeSet>

</databaseChangeLog>
