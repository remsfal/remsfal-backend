# Production Environment Configuration

environment = "prd"

# Pre-created ACR (WICHTIG: muss VOR terraform apply via CLI erstellt werden!)
acr_name           = "rmsflprdweuacr"    # ${PROJECT_PREFIX}${ENVIRONMENT}weuacr
acr_resource_group = "remsfal-iac-rg"    # ${IAC_RESOURCE_GROUP}

# PostgreSQL Configuration
postgres_admin_username = "psqladmin"
postgres_admin_password = "CHANGE_ME_IN_PRODUCTION!"  # Must be changed!
postgres_sku            = "GP_Standard_D2s_v3"
postgres_storage_mb     = 131072

# Cosmos DB Configuration
cosmos_throughput = 1000

# Event Hub Configuration
eventhub_capacity = 2

# Container Apps Configuration
# Images werden aus der ACR geladen: ${acr_name}.azurecr.io/${image_name}:stable
container_apps = {
  frontend = {
    image            = "remsfal-frontend:stable"
    cpu              = 1
    memory           = "2Gi"
    min_replicas     = 2
    max_replicas     = 10
    ingress_enabled  = true
    target_port      = 80
    external_enabled = true
  }
  platform = {
    image            = "remsfal-platform:stable"
    cpu              = 1.5
    memory           = "3Gi"
    min_replicas     = 2
    max_replicas     = 10
    ingress_enabled  = true
    target_port      = 8080
    external_enabled = true
  }
  ticketing = {
    image            = "remsfal-ticketing:stable"
    cpu              = 1.5
    memory           = "3Gi"
    min_replicas     = 2
    max_replicas     = 10
    ingress_enabled  = true
    target_port      = 8081
    external_enabled = true
  }
  notification = {
    image            = "remsfal-notification:stable"
    cpu              = 1
    memory           = "2Gi"
    min_replicas     = 1
    max_replicas     = 5
    ingress_enabled  = true
    target_port      = 8082
    external_enabled = false
  }
  ocr = {
    image            = "remsfal-ocr:stable"
    cpu              = 2
    memory           = "4Gi"
    min_replicas     = 1
    max_replicas     = 5
    ingress_enabled  = true
    target_port      = 8083
    external_enabled = false
  }
}

# Maintained By
maintained_by = "Platform Team"
